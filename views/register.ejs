<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Sign Up</h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/register" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username" value="<%= user.username%>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" >
                </div>
                <div class="form-group">
                    <div class="form-inline">
                        <input class="form-control" style="width:50%" type="text" name="captcha">
                        <a href="#" onclick="javascript:reloadCaptcha();">
                            <img id="imgCaptcha" src="/captcha" alt="captcha" >
                        </a>
                    </div>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>

<script>
    function reloadCaptcha() {
        document.getElementById("imgCaptcha").src = '/captcha?d='+Math.random();
    }
</script>

<% include ./partials/footer %>