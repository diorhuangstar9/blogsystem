<% include ../partials/header %>

  <script type="text/javascript" src='/tinymce.min.js'></script>
  <script type="text/javascript" src='/scripts/tinymceconfig.js'></script>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= blog.name%></h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <textarea name="blog[content]" id="blogContent"><%= blog.content %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs/<%= blog._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>